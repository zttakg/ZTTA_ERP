<div class="row">
  <div class="col-12">
    <%= render_action_links(:create, 'materials', 'Создать материал', new_material_path) %>
  </div>
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title text-center font-weight-bold">Список материалов</h3>
      </div>
      <div class="card-body table-responsive p-0">
        <%= form_for_filter Material %>
        <table class="table table-condensed">
          <tr>
            <th>Наименование <%= sort_link(Material, :name) %></th>
            <th>Толщина <%= sort_link(Material, :thickness) %></th>
            <th>Ширина <%= sort_link(Material, :width_max) %></th>
            <th>Длина <%= sort_link(Material, :height_max) %></th>
            <th>Доступный тип реза</th>
            <th style="width: 170px">Действие</th>
          </tr>
          <%= render @materials %>
        </table>
      </div>
    </div>
  </div>
</div>
