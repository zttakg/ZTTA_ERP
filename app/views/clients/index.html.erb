<div class="row">
  <div class="col-12">
    <%= render_action_links(:create, 'clients', 'Добавить клиента', new_client_path) %>
    <button type="button" class="btn btn-sm btn-outline-primary" data-toggle="collapse" data-target="#clients">Поиск</button>
  </div>
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title text-center font-weight-bold">Список клиентов</h3>
      </div>
      <div class="card-body table-responsive p-0">
        <div id="clients" class="collapse"><%= form_for_filter Client %></div>
        <table class="table table-condensed">
          <tr>
            <th>ID <%= sort_link(Client, :id) %></th>
            <th>Имя <%= sort_link(Client, :name) %></th>
            <th>Телефон</th>
            <th>E-mail <%= sort_link(Client, :email) %></th>
            <th></th>
          </tr>
          <%= render @clients %>
        </table>
      </div>
    </div>
  </div>
</div>
