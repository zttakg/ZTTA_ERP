<%= form_for @client do |f| %>
  <div class="card-body">
    <div class="form-group">
      <%= f.label :name, "Имя"%>
      <%= f.text_field :name, required: false, autofocus: true, label: false, class: 'form-control' , placeholder:"Введите имя клиента" %>
    </div>
    <div class="form-group">
      <%= f.label :last_name, "Фамилия"%>
      <%= f.text_field :last_name, required: false, autofocus: true, label: false, class: 'form-control' , placeholder:"Введите фамилию клиента" %>
    </div>
    <div class="form-group">
      <%= f.label :phone_number, "Номер телефона"%>
      <%= f.text_field :phone_number, required: false, autofocus: true, label: false, id: "phone", type: "tel",
                       class: 'form-control phone_input' , placeholder:"Введите номер телефона клиента",
      value: ('996' + @client.phone_number if @client.phone_number) %>
    </div>
    <div class="form-group">
      <%= f.label :email, "E-Mail"%>
      <%= f.email_field :email, required: false, autofocus: true, label: false, class: 'form-control' , placeholder:"Введите электронную почту клиента" %>
    </div>
    <div class="form-group">
      <%= f.label :discount, "Скидка(%)"%>
      <%= f.number_field :discount, max:"100", required: false, autofocus: true, label: false, class: 'form-control' , placeholder:"Введите скидку для клиента" %>
    </div>
    <% unless action_name == 'edit_data'  %>
      <div class="form-group">
        <%= f.label :password, "Пароль"%>
        <%= f.password_field :password, required: false, autofocus: true, label: false, class: 'form-control' , placeholder:"Введите пароль" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Подтверждение пароля"%>
        <%= f.password_field :password_confirmation, required: false, autofocus: true, label: false, class: 'form-control' , placeholder:"Введите пароль" %>
      </div>
    <% end %>
  </div>

  <div class="card-footer">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>