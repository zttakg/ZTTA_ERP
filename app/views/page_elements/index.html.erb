<div class="row">
  <div class="col-12">
    <%= link_to "Добавить новый слайд", new_page_element_path, class: "btn btn-outline-primary mb-3 mr-3 float-right" %>
  </div>
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title text-center font-weight-bold">Список элементов</h3>
      </div>
      <div class="card-body table-responsive p-0">
        <table class="table table-condensed">
          <tr>
            <th>Тип</th>
            <th>Заголовок</th>
            <th style="width: 170px">Действие</th>
          </tr>
						<% @page_elements.each do |page_element| %>
							<tr>
								<td><%= ::I18n.t("page_elements.element_type.#{page_element.element_type}") %></td>
							  <td><%= page_element.title %></td>
							  <td style="width: 260px;" >
                  <%= link_to 'Редактировать', edit_page_element_path(page_element.id), class: "btn btn-outline-primary"%>
							    <% unless page_element.about_us? || page_element.user_agreement? || page_element.privacy_policy?  %>
                    <%= link_to 'Удалить', page_element_path(page_element.id), method: :delete, data: {confirm: 'Вы уверены?'} , class: "btn btn-outline-primary"%>
                  <% end %>
                </td>
							</tr>
						<% end %>
        </table>
      </div>
    </div>
  </div>
</div>
