<div class="row">
  <div class="col-12">
    <%= link_to "Добавить новый слайд", new_page_element_path, class: "btn btn-outline-primary mb-3 mr-3 float-right" %>
  </div>
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title text-center font-weight-bold">Список элементов</h3>
      </div>
      <div class="card-body table-responsive p-0">
        <table class="table table-condensed">
          <tr>
            <th>Тип элемента</th>
            <th>Заголовок</th>
            <th></th>
            <th></th>
          </tr>
						<% @page_elements.each do |page_element| %>
							<tr>
								<td><%= ::I18n.t("page_elements.element_type.#{page_element.element_type}") %></td>
							  <td><%= page_element.title %></td>
                <td><%= link_to '', edit_page_element_path(page_element.id), class: "nav-icon fa fa-edit"%></td>
                <td><% unless page_element.about_us? || page_element.user_agreement? || page_element.privacy_policy?  %>
                      <%= link_to '', page_element_path(page_element.id), method: :delete, data: {confirm: 'Вы уверены, что хотите удалить элемент <' + page_element.title + '>?'} , class: "nav-icon fa fa-remove"%>
                    <% end %>
                </td>
							</tr>
						<% end %>
        </table>
      </div>
    </div>
  </div>
</div>
